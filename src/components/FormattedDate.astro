---
interface Props {
  date: Date
  class?: string
}

const { date, class: className } = Astro.props
---

<time class:list={["date", className]} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
